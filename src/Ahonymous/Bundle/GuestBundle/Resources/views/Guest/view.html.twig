{% extends "AhonymousGuestBundle::main.html.twig" %}

{% block title %}Guest{% endblock %}

{% block header %}
    <header>
        <div class="container">
            <div class="pagerfanta">
                {{ pagerfanta(guests, 'twitter_bootstrap3') }}
            </div>
        </div>
    </header>
{% endblock header %}

{% block content %}
    {{ form_start(form) }}
        <div class="err">
            {{ form_errors(form.name) }}
            {{ form_errors(form.email) }}
            {{ form_errors(form.message) }}
        </div>
        <div class="form-inline">
            <div class="col-xs-2">
                <b>Name:</b>
                {{ form_widget(
                    form.name, {
                        'attr': {
                        'placeholder': 'Your name',
                        'class': 'form-control',
                        }
                    }
                )}}
            </div>
            <div class="col-xs-2">
                <b>E-mail:</b>
                {{ form_widget(
                    form.email, {
                        'attr': {
                        'placeholder': 'Your email',
                        'class': 'form-control',
                        }
                    }
                )}}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-2">
                <b>Message:</b>
                {{ form_widget(form.message, {
                        'attr': {
                        'placeholder': 'Your Message',
                        'class': 'form-control area',
                        }
                    }
                )}}
            </div>
        </div>
        <div class="form-inline">
            <input type="submit" value="Send" class="btn btn-primary btn-lg" />
        </div>
    {{ form_end(form) }}

    <div class="scroll">
        {% for guest in guests %}
            <hr>
            <p>
                {#<b>ID:</b> {{ guest.id }}#}
                <b>Name:</b> {{ guest.name }}
                <b>E-mail:</b> {{ guest.email }}
                <a class="btn btn-success" href="{{ path('_single', {'id': guest.id}) }}">View</a>
                <a class="btn btn-danger" href="{{ path('_delete', {'id': guest.id}) }}">Delete</a>
            </p>
            {{ guest.message | truncate(20) }}
        {% endfor %}
    </div>
{% endblock content %}

{% block footer %}
    <div class="pagerfanta">
        {{ pagerfanta(guests, 'twitter_bootstrap3') }}
    </div>
{% endblock footer %}
