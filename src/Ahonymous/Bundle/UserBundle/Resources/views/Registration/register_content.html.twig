{% trans_default_domain 'FOSUserBundle' %}

{#{% if error %}#}
    {#<div>{{ error|trans }}</div>#}
{#{% endif %}#}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" role="form">
    {{ form_errors(form) }}

    <div class="form-group">
        <label for="fos_user_registration_form_email" class="col-sm-2 control-label">
            {{ form_label(form.email) }}
        </label>
        <div class="col-sm-10">
            {{ form_widget(form.email, { 'attr' : {
                'class' : 'form-control',
                'id' : 'fos_user_registration_form_email',
                'name' : 'fos_user_registration_form[email]'
            } }) }}
        </div>
    </div>

    <div class="form-group">
        <label for="username" class="col-sm-2 control-label">
            {{ form_label(form.username) }}
            {#{{ 'form.username'|trans }}#}
        </label>
        <div class="col-sm-10">
            {{ form_widget(form.username, { 'attr' : {
                'class' : 'form-control',
                'id' : 'fos_user_registration_form_username',
                'name' : 'fos_user_registration_form[username]'
            } }) }}
        </div>
    </div>

    <div class="form-group">
        <label for="username" class="col-sm-2 control-label">
            {{ form_label(form.plainPassword.first) }}
        </label>
        <div class="col-sm-10">
            {{ form_widget(form.plainPassword.first, { 'attr' : {
                'class' : 'form-control',
                'id' : 'fos_user_registration_form_plainPassword_first',
                'name' : 'fos_user_registration_form[plainPassword][first]'
            } }) }}
        </div>
    </div>

    <div class="form-group">
        <label for="username" class="col-sm-2 control-label">
            {{ form_label(form.plainPassword.second) }}
        </label>
        <div class="col-sm-10">
            {{ form_widget(form.plainPassword.second, { 'attr' : {
                'class' : 'form-control',
                'id': 'fos_user_registration_form_plainPassword_second',
                'name' : 'fos_user_registration_form[plainPassword][second]'
            } }) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">{{ 'registration.submit'|trans }}</button>
        </div>
    </div>
    {{ form_rest(form) }}
</form>
