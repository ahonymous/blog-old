{% extends 'AhonymousBlogBundle::main.html.twig' %}

{% block content -%}
    {{ parent() }}
    <div class="blog-post">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="blog-title">Article list</h3></div>

            <table class="table records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    {#<th>Body</th>#}
                    {#<th>Slug</th>#}
                    <th>Created</th>
                    <th>Updated</th>
                    {#<th>Deleted</th>#}
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td><a href="{{ path('article_show', { 'slug': article.slug }) }}">{{ article.id }}</a></td>
                    <td>{{ article.name }}</td>
                    {#<td>{{ article.body|endsWord(50) }}</td>#}
                    {#<td>{{ article.slug }}</td>#}
                    <td>{% if article.created %}{{ article.created|date('d.m.Y') }}{% endif %}</td>
                    <td>{% if article.updated %}{{ article.updated|date('d.m.Y') }}{% endif %}</td>
                    {#<td>{% if article.deleted %}{{ article.deleted|date('d.m.Y, H:i:s') }}{% endif %}</td>#}
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('article_show', { 'slug': article.slug }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('article_edit', { 'slug': article.slug }) }}">edit</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
        <ul>
            <li>
                <a href="{{ path('article_new') }}">
                    Create a new article.
                </a>
            </li>
        </ul>
    </div>
{% endblock %}
